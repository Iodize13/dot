# Layout switch
shift + Alt_L
    setxkbmap -query | grep -q 'th' && setxkbmap us || setxkbmap th,us
shift + Alt_R
    setxkbmap -query | grep -q 'th' && setxkbmap us || setxkbmap th,us
# Basic binds

# $TERMINAL -e tmux
super + Return
      $TERMINAL
super + {b,n}
      brillo -q {-U,-A} 5 
super + {s,d}
      pactl set-sink-volume @DEFAULT_SINK@ {-2%,+2%}
super + shift + {j,k}
      pactl set-sink-volume @DEFAULT_SINK@ {-5%,+5%}
super + m
      kitty -e ncmpcpp
super + i
      kitty -e htop
super + shift + a
      kitty -e plusemixer
super + c
      st -e $HOME/note.md

